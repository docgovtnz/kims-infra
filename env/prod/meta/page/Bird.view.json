                  }
                ],
                [
                  {
                    "width": "12",
                    "height": "1",
                    "component": "LinkList",
                    "attributeName": "projects",
                    "labelLayout": "Left"
                  }
                ],
                [
                  {
                    "width": "12",
                    "height": "1",
                    "attributeName": "comments",
                    "component": "TextArea"
                  }
                ]
              ],
              "locations": {
                "BottomLeft": {
                  "type": "Button",
                  "containerStyles": "",
                  "styles": "btn btn-outline-primary",
                  "label": "Edit bird",
                  "route": "/data/Bird/edit/${bird.id}",
                  "actionPermit": "Edit",
                  "subjectPermit": "Bird"
                },
                "BottomRight": {
                  "type": "Button",
                  "channel": "",
                  "containerStyles": "",
                  "styles": "btn btn-link",
                  "label": "Delete bird",
                  "modes": "",
                  "action": "",
                  "route": "/route/go/here",
                  "icon": "delete",
                  "actionPermit": "Archive",
                  "subjectPermit": "Bird"
                }
              },
              "styles": "bird-view"
            }
          }
        ]
      ],
      "metaEntityName": "Bird",
      "type": "form",
      "styles": ""
    }
  ]
}