{
  "name": "Bird.view",
  "title": "$PageTitle",
  "type": "view_edit",
  "layoutStyle": "Venice",
  "dataQueryList": [
    {
      "dataName": "bird",
      "resultCardinality": "QueryOne",
      "queryType": "Entity",
      "queryName": "Bird",
      "fieldName": "id",
      "parameter": "id"
    },
    {
      "dataName": "events",
      "resultCardinality": "QueryMany",
      "queryType": "Custom",
      "queryName": "EventSearchByCriteria",
      "fieldName": "bird_id",
      "parameter": "id",
      "orderByName": "date_time",
      "orderByDir": "DESC",
      "metaEntityName": "EventSearchResult"
    }
  ],
  "controllers": [
    {
      "name": "EventPanelController",
      "class": "SearchController",
      "channel": "eventPanel",
      "criteria": "eventPanelCriteria",
      "query": "events",
      "results": "eventPanelSearchResults",
      "initialPageSize": 10
    }
  ],
  "templates": [
    {
      "cells": [
        [
          {
            "width": "3",
            "height": "1",
            "tool": {
              "type": "PageTitle",
              "containerStyles": "",
              "styles": "",
              "label": "",
              "modes": "",
              "nameAttributes": "name"
            }
          },
          {
            "width": "2",
            "height": "1",
            "attributeName": "band"
          },
          {
            "width": "2",
            "height": "1",
            "attributeName": "microchip"
          },
          {
            "width": "1",
            "height": "1",
            "attributeName": "wing_tag"
          },
          {
            "width": "4",
            "height": "1",
            "attributeName": "status"
          }
        ]
      ],
      "metaEntityName": "Bird",
      "type": "header",
      "binding": "bird",
      "locations": {
        "TopRight": {
          "type": "Button",
          "channel": "",
          "containerStyles": "",
          "styles": "btn btn-success",
          "label": "Add event",
          "modes": "",
          "action": "recordEvent",
          "route": "data/Event/edit/**NEW**?bird_id=${bird.id}",
          "icon": "",
          "actionPermit": "Edit",
          "subjectPermit": "Event"
        }
      },
      "styles": ""
    },
    {
      "cells": [
        [
          {
            "width": "8",
            "height": "1",
            "template": {
              "binding": "eventPanelSearchResults",
              "templateHeading": "Events",
              "type": "table",
              "metaEntityName": "EventSearchResult",
              "orderByName": "date_time",
              "orderByDir": "DESC",
              "cells": [
                [
                  {
                    "width": "6",
                    "height": "1",
                    "attributeName": "date_time"
                  },
                  {
                    "width": "1",
                    "height": "1",
                    "attributeName": "event_type"
                  },
                  {
                    "width": "1",
                    "height": "1",
                    "attributeName": "activities",
                    "component": "BadgeList"
                  }
                ]
              ],
              "route": "/data/Event/view/${id}?backTo=Bird",
              "navigation": "Enabled",
              "locations": {
                "BottomMiddle": {
                  "type": "Paginate",
                  "channel": "eventPanel",
                  "containerStyles": "",
                  "styles": "",
                  "label": "",
                  "modes": "",
                  "criteriaForm": "eventPanelCriteria"
                }
              },
              "noItemsHtml": "<div class=\"text-center\">No events recorded yet</div> <div class=\"text-center text-secondary\">Click \"Add event\" to create a new event for this bird</div>",
              "styles": ""
            }
          },
          {
            "width": "4",
            "height": "1",
            "template": {
              "binding": "bird",
              "templateHeading": "Bird details",
              "type": "form",
              "metaEntityName": "Bird",
              "orderByName": "",
              "orderByDir": "",
              "cells": [
                [
                  {
                    "width": "12",
                    "height": "1",
                    "attributeName": "species",
                    "labelLayout": "Left",
                    "component": "SelectTwo",
                    "componentData": {
                      "secondaryAttributeName": "form"
                    }
                  }
                ],
                [
                  {
                    "width": "12",
                    "height": "1",
                    "attributeName": "age_class",
                    "labelLayout": "Left"
                  }
                ],
                [
                  {
                    "width": "12",
                    "height": "1",
                    "attributeName": "first_found_date",
                    "labelLayout": "Left"
                  }
                ],
                [
                  {
                    "width": "12",
                    "height": "1",
                    "attributeName": "lay_date",
                    "labelLayout": "Left"
                  }
                ],
                [
                  {
                    "width": "12",
                    "height": "1",
                    "attributeName": "hatch_date",
                    "labelLayout": "Left"
                  }
                ],
                [
                  {
                    "width": "12",
                    "height": "1",
                    "attributeName": "demise_date",
                    "labelLayout": "Left"
                  }
                ],
                [
                  {
                    "width": "12",
                    "height": "1",
                    "component": "TextInput",
                    "attributeName": "sex",
                    "labelLayout": "Left"
                  }
                ],
                [
                  {
                    "width": "12",
